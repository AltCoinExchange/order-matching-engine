{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": [
      "es6", "ES2015"
    ],
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./services/dist"
  },
  "include": [
    "services/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}